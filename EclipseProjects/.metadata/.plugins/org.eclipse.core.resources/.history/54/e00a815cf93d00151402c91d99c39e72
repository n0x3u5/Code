package com.n0x3u5.basic;

public class HelloWorld {
	
	static String randomString = "Hello, World!";
	
	public static void main(String []args) {
		
		byte bigByte = 127;
		short bigShort = 32767;
		int bigInt = 2100000000;
		long bigLong = 9220000000000000000L;
		
		float bigFloat = 3.14F;
		double bigDouble = 3.147812581297129837010;
		
		boolean trueOrFalse = true;
		
		char randomChar = 65;
		char anotherChar = 'A';
		
		System.out.println(randomChar);
		System.out.println(anotherChar);
		
		char escapedChars = '\f';
		
		String randomString = "I'm a random string!";
		String anotherString = " I'm another random string!";
		
		System.out.println(randomString + anotherString);
		
		String byteString = Byte.toString(bigByte);
		String shortString = Short.toString(bigShort);
		String intString = Integer.toString(bigInt);
		String longString = Long.toString(bigLong);
		String floatString = Float.toString(bigFloat);
		
		System.out.println(byteString);
		
		System.out.println(Byte.MAX_VALUE);
		System.out.println(Short.MAX_VALUE);
		System.out.println(Integer.MAX_VALUE);
		System.out.println(Float.MAX_VALUE);
		System.out.println(Double.MAX_VALUE);
		
		double aDouble = 3;
		int doubleToInt = (int) aDouble;
		
		int stringToInt = Integer.parseInt(intString);
		
		System.out.println(stringToInt);		
		System.out.println(doubleToInt);
		
	}
}